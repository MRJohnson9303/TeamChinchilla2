@{
    var controller = this.ViewContext.RouteData.Values["controller"].ToString();
    string cLayout = "";

    if (controller == "Member") {
        cLayout = "~/Views/Shared/_MemberLayout.cshtml";
    }
    else if (controller == "Admin")
    {
        cLayout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if (controller == "Director")
    {
        cLayout = "~/Views/Shared/_DirectorLayout.cshtml";
    }
    else if (controller == "Staff")
    {
        cLayout = "~/Views/Shared/_StaffLayout.cshtml";
    }
    else
    {
        cLayout = "~/Views/Shared/_Layout.cshtml";
    }
    Layout = cLayout;
}
