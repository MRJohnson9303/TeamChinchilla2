@model MESACCA.ViewModels.News.ConfirmDeleteNewsViewModel
@{
    ViewBag.Title = "Are you sure you want to delete this news posting?";
}
<br /><br />
<h2>Delete</h2>
<h3>Are you sure you want to delete this news posting?</h3>
<hr />
@*Adding a return button for the User*@
<div class="form-actions">
    <a href="@Url.Action("SelectNews", "News")" style="margin-bottom:10px", class="btn btn-primary">Back to Manage News</a>
</div>
<dl class="dl-horizontal">
    <dt>
        Title: 
    </dt>
    <dd>
        @Model.ArticleTitle
    </dd>
</dl>
@using (Html.BeginForm("ConfirmDeleteNews", "News", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(x => x.ArticleID)
    <div class="form-actions">
        <button type="submit" name="button" value="delete" class="btn btn-primary">Delete</button>
    </div>
}
