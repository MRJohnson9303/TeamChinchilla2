@model MESACCA.ViewModels.News.ConfirmDeleteNewsViewModel
@{
    ViewBag.Title = "Are you sure you want to delete this news posting?";
}
<br /><br />
<h2>Delete</h2>
<h3>Are you sure you want to delete this news posting?</h3>
@if (ViewBag.Message != null)
{
    <span class="text-danger">@ViewBag.Message</span>
}
<hr />
@*Adding a return button for the User*@
<div class="form-actions">
    <a href="@Url.Action("ManageNews", "News")" style="margin-bottom:10px", class="btn btn-primary">Back to Manage News</a>
</div>
<dl class="dl-horizontal">
    <dt>
        Title: 
    </dt>
    <dd>
        @Html.TextBoxFor(model => model.ArticleTitle, new { @class = "form-control", @readonly = "readonly", style = "background-color:#CCCCCC" })
    </dd>
    <dt>
        Summary:
    </dt>
    <dd>
        @Html.TextAreaFor(model => model.ArticleBody, new { @class = "form-control", @readonly = "readonly", style = "background-color:#CCCCCC", rows = "2" })
    </dd>
    <dt>
        Attached File:
    </dt>
    <dd>
        @Html.TextBoxFor(model => model.FileName, new { @class = "form-control", @readonly = "readonly", style = "background-color:#CCCCCC", rows = "2" })
    </dd>
</dl>
@using (Html.BeginForm("ConfirmDeleteNews", "News", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(x => x.ArticleID)
    @Html.HiddenFor(x => x.Attach1URL)
    <div class="form-actions">
        <button type="submit" name="button" value="delete" class="btn btn-primary">Delete</button>
    </div>
}
