@model MESACCA.ViewModels.News.ConfirmDeleteNewsViewModel
@{
    ViewBag.Title = "Are you sure you want to delete this news posting?";
}
<br /><br />
<h2>Delete</h2>
<h3>Are you sure you want to delete this news posting?</h3>
<hr />
<dl class="dl-horizontal">
    <dt>
        Title: 
    </dt>
    <dd>
        @Model.ArticleTitle
    </dd>
</dl>

    

    @using (Html.BeginForm("ConfirmDeleteNews", "News", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.HiddenFor(x => x.ArticleID)
        <div class="form-actions no-color">
            <button type="submit" name="button" value="delete" class="btn btn-default">Delete</button> |
            <button type="submit" name="button" value="back" class="btn btn-default">Back to List</button>
        </div>
    }
