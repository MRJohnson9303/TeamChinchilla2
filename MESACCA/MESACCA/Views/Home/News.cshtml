@{
    ViewData["Title"] = "News";
}
<div class="container">
    <div class="NewsContainer" style="width: 100%;">
       
        <div style="font-size:30px; font-style: italic;">
            News and Updates
        </div>

         @foreach (var x in Model)
        {
             <div style= "border: 1px solid; margin-top: 15px">
                 <!-- Header Div ie, who posted, date it was posted Div-->
                 <div style="padding: 5px">
                    Header Name of who posted Date of post possible Icon
                 </div>

                 <!-- Content Div-->
                 <div style="padding:8px; border-top: 1px solid; border-bottom: 1px solid;">
                    @x
                 </div>

                 <!-- Attachment Div-->
                 <div style="padding: 5px">
                     Place attachment links here
                 </div>

            </div>
         }

    </div>
</div>