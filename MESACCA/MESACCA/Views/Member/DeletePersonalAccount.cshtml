@{
    ViewData["Title"] = "Delete Personal Account";
}
<h2>Delete Personal Account</h2>

<h3>Are you sure you want to delete your account?</h3>
<div>
    @using (Html.BeginForm("DeletePersonalAccount", "Member", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Confirm Deletion</button>
            @*Adding a return button for the User*@
            <a href="@Url.Action("ManagePersonalAccount", "Member")", class="btn btn-primary">Back to Manage Personal Account</a>
        </div>
    }
</div>
